{
    "eslint.useFlatConfig": true,
    "eslint.useESLintClass": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.requireConfig": true,
    "prettier.printWidth": 120,
    "editor.formatOnSave": true,
    "files.associations": {
      "*.css": "tailwindcss"
    },
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "tailwindCSS.classFunctions": ["tv", "tx"],
    "tailwindCSS.experimental.configFile": "./website/src/root.css",
    "typescript.tsdk": "node_modules/typescript/lib",
    "npm.enableRunFromFolder": true,
    "npm.exclude": [
      "**/build/**",
      "**/.vercel/**"
    ],
    "files.watcherExclude": {
      "**/.vercel/**": true,
      "**/build/**": true,
      "**/node_modules/**": true
    },
    "search.exclude": {
      "**/.vercel/**": true,
      "**/build/**": true
    },
    "github.copilot.chat.commitMessageGeneration.instructions": [
      {
        "text": "Use conventional commit message format. Use english. Use docs for website folder changes. If it's a component update, the component name should use an uppercase first letter. Length less than 100"
      }
    ]
}
