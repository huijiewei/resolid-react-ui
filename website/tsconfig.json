{
  "extends": "@resolid/config/tsconfig/react",
  "include": [
    ".react-router/types/**/*",
    ".resolid/component-demos/*",
    "src/**/*",
    "env.d.ts",
    "react-router.config.ts",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./src/*"],
      "@resolid/react-ui": ["../packages/react-ui/src"]
    }
  },
  "mdx": {
    "plugins": ["remark-directive", "remark-frontmatter", "remark-gfm"]
  }
}
